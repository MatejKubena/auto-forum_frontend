<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/topBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/textdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imageView"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"


        android:text="@string/details"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="SmallSp" />




    <TextView
        android:id="@+id/profilerole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textdetails"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"

        android:text="Username:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/registeredtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profilerole"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"

        android:text="Registered:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/numthreads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/registeredtime"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"

        android:text="Threads:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/numcomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/numthreads"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"

        android:text="Comments:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/userratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/numcomments"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"

        android:text="Ratio:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/profileusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/userratio"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"

        android:text="@string/role"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />















    <TextView
        android:id="@+id/hereusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profilerole"
        android:layout_toRightOf="@+id/profilerole"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-25dp"


        android:text="username"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/hereuserrole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profileusername"
        android:layout_toRightOf="@+id/profileusername"
        android:layout_marginStart="105dp"
        android:layout_marginTop="-25dp"

        android:text="role"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/hereregistered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/registeredtime"
        android:layout_toRightOf="@+id/registeredtime"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-25dp"

        android:text="Registered"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />


    <TextView
        android:id="@+id/herethreads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/numthreads"
        android:layout_toRightOf="@+id/numthreads"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-25dp"

        android:text="threads{num}"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/herecomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/numcomments"
        android:layout_toRightOf="@+id/numcomments"
        android:layout_marginStart="48dp"
        android:layout_marginTop="-25dp"

        android:text="comments{num}"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/hereRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/userratio"
        android:layout_toRightOf="@+id/userratio"
        android:layout_marginStart="95dp"
        android:layout_marginTop="-25dp"

        android:text="user ratio"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />









    <Button
        android:id="@+id/changeprofilepicbut"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/topBar"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="119dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Change profile picture"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>









    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"



        android:layout_below="@+id/profileusername"
        android:layout_toRightOf="@+id/profileusername"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="45dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"

        android:layout_below="@+id/editTextUsername"
        android:layout_toRightOf="@+id/editTextUsername"
        android:layout_marginStart="-258dp"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/changepassandname"
        android:layout_width="260dp"
        android:layout_height="40dp"

        android:layout_below="@+id/editTextPassword"
        android:layout_toRightOf="@+id/editTextPassword"
        android:layout_marginStart="-258dp"
        android:layout_marginTop="10dp"


        android:text="Change profile details"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>














    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="?attr/actionBarTheme" >

        <ImageButton
            android:id="@+id/topBarBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/topBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="24dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:theme="?attr/actionBarTheme" >

        <ImageButton
            android:id="@+id/navButtHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_home" />
        <ImageButton
            android:id="@+id/navButtMyposts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_my_threds" />
        <ImageButton
            android:id="@+id/navButtFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_favorites" />
        <ImageButton
            android:id="@+id/navButtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_profile" />
        <ImageButton
            android:id="@+id/navButtMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_more" />

    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>