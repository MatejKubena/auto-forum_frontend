<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout> -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_container"/>


    <Button
        android:id="@+id/rules"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000000"
        android:backgroundTint="#C4C4C4"
        android:text="@string/rules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"/>


    <Button
        android:id="@+id/discussions"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000000"
        android:backgroundTint="#C4C4C4"
        android:text="@string/discussions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/diagnostics"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#C4C4C4"
        android:text="@string/diagnostics"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="140dp"/>

    <Button
        android:id="@+id/legislature"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000000"
        android:backgroundTint="#C4C4C4"
        android:text="@string/legislature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="210dp"/>

    <Button
        android:id="@+id/parts"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000000"
        android:backgroundTint="#C4C4C4"
        android:text="@string/parts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="280dp"/>

    <Button
        android:id="@+id/maitenance"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000000"
        android:backgroundTint="#C4C4C4"
        android:text="@string/maintenance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="350dp"/>


    <Button
        android:id="@+id/tuning"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#C4C4C4"
        android:text="@string/tuning"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="top"
        android:layout_marginTop="420dp"/>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />



    </ScrollView>





    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:theme="?attr/actionBarTheme" >

        <ImageButton
            android:id="@+id/navButtHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_home" />
        <ImageButton
            android:id="@+id/navButtMyposts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_my_threds" />
        <ImageButton
            android:id="@+id/navButtFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_favorites" />
        <ImageButton
            android:id="@+id/navButtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_profile" />
        <ImageButton
            android:id="@+id/navButtMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/nav_bar_more" />

    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>


